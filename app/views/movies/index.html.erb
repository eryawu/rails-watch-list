<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All movies</h1>
      <ul class="list-group">
        <% @movies.each do |movie| %>
          <li class="list-group-item">
            <%= link_to movie.title, movie_path(movie) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new movie", new_movie_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
